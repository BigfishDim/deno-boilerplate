{
	"compilerOptions": {
		"allowJs": false,
		"lib": ["deno.window"],
		"strict": true
	},
	"lint": {
		"include": ["src/"],
		"exclude": [],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"useTabs": false,
		"lineWidth": 100,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/"],
		"exclude": []
	},
	"lock": false,
	"nodeModulesDir": true,
	"test": {
		"include": ["tests/"],
		"exclude": []
	},
	"tasks": {
		"start": "deno run --env --allow-env src/main.ts",
		"dev": "deno run --env --allow-env --watch src/main.ts"
	},
	"imports": {
		"asserts": "https://deno.land/std/testing/asserts.ts"
	}
}
